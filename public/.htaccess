# Apache .htaccess for SPA routing
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # CRITICAL: Don't rewrite JavaScript, CSS, or other static assets
  # This must come FIRST to prevent 404s from being rewritten to index.html
  # Check for file extensions that should never be rewritten
  # If file doesn't exist, let Apache return 404 (don't rewrite to index.html)
  RewriteCond %{REQUEST_URI} \.(js|mjs|jsx|css|map|json|xml|txt|pdf|ico|png|jpg|jpeg|gif|svg|webp|woff|woff2|ttf|eot|wasm)$ [NC]
  RewriteRule ^ - [L]
  
  # Don't rewrite assets directory - serve files directly (even if missing)
  # This ensures missing assets return 404, not index.html
  RewriteCond %{REQUEST_URI} ^/assets/
  RewriteRule ^ - [L]
  
  # Don't rewrite if the request is for an existing file
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]
  
  # Don't rewrite if the request is for an existing directory
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  
  # Rewrite everything else to index.html for SPA routing
  RewriteRule ^index\.html$ - [L]
  RewriteRule . /index.html [L]
</IfModule>

# MIME types for JavaScript modules
<IfModule mod_mime.c>
  AddType application/javascript js
  AddType application/javascript mjs
  AddType text/javascript jsx
  AddType application/json json
  AddType application/wasm wasm
</IfModule>

# Security headers
<IfModule mod_headers.c>
  # Set proper Content-Type for JavaScript files
  <FilesMatch "\.(js|mjs|jsx)$">
    Header set Content-Type "application/javascript; charset=utf-8"
  </FilesMatch>
  
  # Set proper Content-Type for WASM files
  <FilesMatch "\.wasm$">
    Header set Content-Type "application/wasm"
  </FilesMatch>
  
  Header set X-Frame-Options "DENY"
  Header set X-Content-Type-Options "nosniff"
  Header set X-XSS-Protection "1; mode=block"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

