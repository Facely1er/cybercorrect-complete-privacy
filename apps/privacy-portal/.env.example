# CyberCorrect Privacy Portal - Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ===========================================
# REQUIRED - Core Application Configuration
# ===========================================

# Supabase Configuration (Required for cloud mode)
# Get these from: https://app.supabase.com -> Your Project -> Settings -> API
# Project URL: Use for VITE_SUPABASE_URL
# anon/public key: Use for VITE_SUPABASE_ANON_KEY
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Application Configuration
VITE_APP_URL=http://localhost:5174
VITE_ENVIRONMENT=development

# ===========================================
# OPTIONAL - Feature Configuration
# ===========================================

# Application Branding
VITE_APP_NAME=Privacy Portal
VITE_COMPANY_NAME=CyberCorrect

# Custom Branding (Optional)
VITE_CUSTOM_CSS_URL=
VITE_LOGO_URL=
VITE_FAVICON_URL=

# Error Monitoring (Optional)
# Sentry DSN for error tracking and performance monitoring
# Get from: https://sentry.io -> Your Project -> Settings -> Client Keys (DSN)
VITE_SENTRY_DSN=
VITE_ENABLE_ERROR_REPORTING=false
VITE_CUSTOM_ERROR_ENDPOINT=

# Analytics Configuration (Optional)
# Enable analytics only if both VITE_ENABLE_ANALYTICS=true and VITE_ANALYTICS_ID are provided
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Feature Flags
VITE_DEBUG_MODE=false
VITE_RATE_LIMIT_ENABLED=true
VITE_ACCESSIBILITY_TESTING=false
VITE_REQUIRE_AUTH=false

# Cross-App URLs (for navigation between apps)
VITE_MARKETING_SITE_URL=http://localhost:5175
VITE_FRAMEWORK_COMPLIANCE_URL=http://localhost:5173

# Node Environment
# Options: development, production, test
NODE_ENV=development
