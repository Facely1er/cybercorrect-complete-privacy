# Environment Variables Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ===========================================
# REQUIRED - Core Application Configuration
# ===========================================

# Supabase Configuration (Required)
# Get these from: https://app.supabase.com -> Your Project -> Settings -> API
# Project URL: Use for VITE_SUPABASE_URL
# anon/public key: Use for VITE_SUPABASE_ANON_KEY
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Node Environment
# Options: development, production, test
NODE_ENV=development

# ===========================================
# OPTIONAL - Feature Configuration
# ===========================================

# Error Monitoring (Optional)
# Sentry DSN for error tracking and performance monitoring
# Get from: https://sentry.io -> Your Project -> Settings -> Client Keys (DSN)
VITE_SENTRY_DSN=

# Error Monitoring Endpoint (Optional)
# Alternative error monitoring service endpoint
VITE_ERROR_MONITORING_ENDPOINT=

# Analytics Configuration (Optional)
# Enable analytics only if both VITE_ENABLE_ANALYTICS=true and VITE_ANALYTICS_ID are provided
# Options: true, false
VITE_ENABLE_ANALYTICS=false

# Analytics ID (Optional)
# Required only if VITE_ENABLE_ANALYTICS=true
VITE_ANALYTICS_ID=

# Chat Support (Optional)
# Enable in-app chat support feature
# Options: true, false
VITE_ENABLE_CHAT_SUPPORT=false
